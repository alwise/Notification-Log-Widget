<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary"
    tools:ignore="UseCompoundDrawables"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:contentDescription="item icon"
        android:src="@mipmap/ic_launcher_round"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/widget_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:padding="3dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/widget_item_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_item_name"
        android:layout_alignStart="@+id/widget_item_name"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="3dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>